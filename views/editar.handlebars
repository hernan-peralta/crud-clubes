<form action="/nuevo" method="POST" enctype="multipart/form-data">
  <label for="id-escudo">Escudo</label>
  <input type="file" name="crestUrl" id="id-escudo" value={{equipo.crestUrl}}>
  <br>
  <label for="id-nombre">Nombre</label>
  <input type="text" name="name" id="id-nombre" value="{{equipo.name}}">
  <br>
  <label for="id-nombreCorto">Nombre corto</label>
  <input type="text" name="shortName" id="id-nombreCorto" value={{equipo.shortName}}>
  <br>
  <label for="id-acronimo">Acronimo (3 letras)</label>
  <input type="text" name="tla" id="id-acronimo" value={{equipo.tla}}>
  <br>
  <label for="id-direccion">Direccion</label>
  <input type="text" name="address" id="id-direccion" value="{{equipo.address}}">
  <br>
  <label for="id-telefono">Telefono</label>
  <input type="text" name="phone" id="id-telefono" value="{{equipo.phone}}">
  <br>
  <label for="id-website">Website</label>
  <input type="text" name="website" id="id-website" value={{equipo.website}}>
  <br>
  <label for="id-email">E-Mail</label>
  <input type="text" name="email" id="id-email" value={{equipo.email}}>
  <br>
  <label for="id-fundacion">AÃ±o fundacion</label>
  <input type="text" name="founded" id="id-fundacion" value={{equipo.founded}}>
  <br>
  <label for="id-colores">Colores del club</label>
  <input type="text" name="clubColors" id="id-colores" value="{{equipo.clubColors}}">
  <br>
  <label for="id-estadio">Estadio</label>
  <input type="text" name="venue" id="id-estadio" value="{{equipo.venue}}">
  <br>
  <input type="submit" value="Agregar equipo">
</form>
<br>

<a href="/">
<button id='inicio'>Volver a inicio</button>
</a>
