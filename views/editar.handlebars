<h2>Editar equipo</h2>

{{#if vieneDeWeb}}
<img src={{equipo.crestUrl}} alt="">
{{else}}
<img src="/uploads/imagenes/{{equipo.crestUrl}}" alt="">
{{/if}}

{{#if data.mensaje}}
<p id="mensaje-exito">{{data.mensaje}}</p>
{{/if}}

<div id="div-boton">
  <a href="/">
    <button id='inicio'>Volver a inicio</button>
  </a>
</div>

